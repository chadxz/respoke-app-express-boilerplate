extends ../_layout
block content
  h1 Signup
  .panel.panel-default
    .panel-body
      form(method="post" action="/signup")
        .form-group
          label(for="name") Name
          input#name.form-control(type="text" name="name" placeholder="Gilligan" required)
        .form-group
          label(for="email") Email Address
          input#email.form-control(type="email" name="email" placeholder="me@here.com" required)
        .form-group
          label(for="password") Password
          input#password.form-control(type="password" name="password" placeholder="********" required)
        .form-group
          label(for="confirmPassword") Confirm Password
          input#confirmPassword.form-control(type="password" name="confirmPassword" placeholder="********" required)
        input(type="hidden" name="_csrf" value=_csrf)
        button.btn.btn-default(type="submit") Signup
